<html class="ext-strict x-viewport" lang="en" xml:lang="en" xmlns="http://www.w3.org/1999/xhtml">

    <head>
        <title>{%block title %}JukeCloud{% endblock %}</title>
        {%block metas %}
            <meta content="text/html; charset=utf-8" http-equiv="X-UA-Compatible" content="IE=edge">
                <meta name="viewport" content="width=device-width, initial-scale=1">
                {% endblock %}

                {% block styles %}
                    <link rel="stylesheet" href="{{ asset(components_folder ~ 'bootstrap/css/bootstrap.min.css')}}"/>
                    <link rel="stylesheet" href="{{ asset(components_folder ~ 'font-awesome/css/font-awesome.min.css')}}"/>
                    <link rel="stylesheet" href="{{ asset(components_folder ~ 'jqueryui-theme-bootstrap/jquery-ui-1.10.3.theme.css')}}"/>
                    <link rel="stylesheet" href="{{ asset(components_folder ~ 'jqueryui-theme-bootstrap/jquery.ui.theme.font-awesome.css')}}"/>
                    <link rel="stylesheet" href="{{ asset(components_folder ~ 'jquery-ui/themes/base/jquery.ui.slider.css')}}"/>
                    <link rel="stylesheet" href="{{ asset('bundles/tabernicolajukecloud/player-skin/style.css')}}"/>
                    <link rel="stylesheet" href="{{ asset('bundles/tabernicolajukecloud/css/style.css')}}"/>
                    <link rel="stylesheet" href="{{ asset('bundles/tabernicolajukecloud/css/jquery-slider.css')}}"/>
                    <link rel="stylesheet" href="/jstree/themes/default/style.min.css" />
                    <link rel="stylesheet" href="/blueimp-fileupload/css/jquery.fileupload.css" />
                    <link rel="stylesheet" href="/blueimp-fileupload/css/jquery.fileupload-ui.css" />
                {% endblock %}

                </head>

                <body>

                    <!--CONTROLS-->
                    {%block controls %}
                        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                            <div class="container-fluid">
                                {{ include('TabernicolaJukeCloudBundle:Blocks:_controls.html.twig')}}
                            </div> 
                        </div>    
                    {% endblock %}

                    <div class="container-fluid">
                        <div id="main-panel" class="row">
                            <!--nav (left column)--> 
                            {%block nav %}
                                <div id="left-panel" class="col-sm-3 col-md-3 sidebar panel">   
                                    {{ include('TabernicolaJukeCloudBundle:Blocks:_nav.html.twig')}}
                                </div>
                            {% endblock %}

                            <!--BROWSER (central column -->
                            {%block browser %}
                                <div id="center-panel" class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 main panel sidebar">
                                    {{ include('TabernicolaJukeCloudBundle:Blocks:_browser.html.twig')}}
                                </div>
                            {% endblock %}

                            <!--Playlist cover lirycs (right column)-->
                            {%block playlist %}
                                <div id="right-panel" class="col-sm-3 col-sm-offset-9 panel col-md-3 col-md-offset-9 sidebar">    
                                    {{ include('TabernicolaJukeCloudBundle:Blocks:_playlist.html.twig')}}
                                </div>
                            {% endblock %}
                        </div>
                    </div>

                    {% block javascript %}
                        {{ include('TabernicolaJukeCloudBundle:Blocks:_upload.html.twig')}}
                        <!-- Placed at the end of the document so the pages load faster -->
                        <script src="{{ asset(components_folder ~ 'jquery/jquery.min.js') }}"></script>
                        <script src="{{ asset(components_folder ~ 'bootstrap/js/bootstrap.min.js') }}"></script>
                        <script src="{{ asset(components_folder ~ 'jquery-ui/ui/minified/jquery-ui.min.js') }}"></script>
                        <script src="{{ asset(components_folder ~ 'jquery-ui/ui/jquery.ui.slider.js') }}"></script>
                        <script src="{{ asset('bundles/tabernicolajukecloud/js/id3v2.js') }}"></script>
                        <script src="{{ asset(components_folder ~ 'jplayer/jquery.jplayer/jquery.jplayer.js') }}"></script>
                        <script src="jstree/jstree.min.js"></script>
                        <!-- The Templates plugin is included to render the upload/download listings -->
                        <script src="{{ asset('bundles/tabernicolajukecloud/js/template.js')}}"></script>
                        <!-- The Iframe Transport is required for browsers without support for XHR file uploads -->
                        <script src="/blueimp-fileupload/js/jquery.iframe-transport.js"></script>
                        <!-- The basic File Upload plugin -->
                        <script src="/blueimp-fileupload/js/jquery.fileupload.js"></script>
                        <!-- The File Upload processing plugin -->
                        <script src="/blueimp-fileupload/js/jquery.fileupload-process.js"></script>
                        <!-- The File Upload audio preview plugin -->
                        <script src="{{ asset('bundles/tabernicolajukecloud/js/fileupload-audio.js') }}"></script>
                        <!-- The File Upload video preview plugin 
                        <script src="js/jquery.fileupload-video.js"></script>-->
                        <!-- The File Upload validation plugin -->
                        <script src="/blueimp-fileupload/js/jquery.fileupload-validate.js"></script>
                        <!-- The File Upload user interface plugin -->
                        <script src="/blueimp-fileupload/js/jquery.fileupload-ui.js"></script>
                        <script src="{{ asset('bundles/tabernicolajukecloud/js/init.js') }}"></script>
                        <script src="{{ asset('bundles/tabernicolajukecloud/js/playlist.js') }}"></script>
                        <script src="{{ asset('bundles/tabernicolajukecloud/js/library.js') }}"></script>
                        <script src="{{ asset('bundles/tabernicolajukecloud/js/upload.js') }}"></script>
                        {% endblock %}

                            <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="add-song-div">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 class="modal-title">Añade más canciones a la colección</h4>
                                        </div>
                                        <div class="modal-body">
                                            <ul id="upload-menu" class="nav nav-tabs" role="tablist">
                                                <li class="active"><a href="#upload" role="tab" data-toggle="tab">Sube canciones</a></li>
                                                <li><a href="#youtube" role="tab" data-toggle="tab">Youtube</a></li>
                                                <li><a href="#tutv" role="tab" data-toggle="tab">Tu.Tv</a></li>
                                            </ul>
                                            <div class="tab-content fileupload-buttonbar">
                                                <div class="tab-pane  active" id="upload">
                                                    <form id="fileupload" action="/" method="POST" enctype="multipart/form-data">
                                                        <!-- Redirect browsers with JavaScript disabled to the origin page -->
                                                        <noscript><input type="hidden" name="redirect" value="/"></noscript>
                                                        <!-- The fileupload-buttonbar contains buttons to add/delete files and start/cancel the upload -->
                                                        <div class="row fileupload-buttonbar">
                                                            <div class="col-lg-7">
                                                                <!-- The fileinput-button span is used to style the file input field as button -->
                                                                <span class="btn btn-success fileinput-button">
                                                                    <i class="glyphicon glyphicon-plus"></i>
                                                                    <span>Elige archivos</span>
                                                                    <input type="file" name="files[]" multiple>
                                                                </span>
                                                                <button type="submit" class="btn btn-primary start">
                                                                    <i class="glyphicon glyphicon-upload"></i>
                                                                    <span>Start All</span>
                                                                </button>
                                                                <!-- The global file processing state -->
                                                                <span class="fileupload-process"></span>
                                                            </div>
                                                            <!-- The global progress state -->
                                                            <div class="col-lg-5 fileupload-progress fade">
                                                                <!-- The global progress bar -->
                                                                <div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100">
                                                                    <div class="progress-bar progress-bar-success" style="width:0%;"></div>
                                                                </div>
                                                                <!-- The extended global progress state -->
                                                                <div class="progress-extended">&nbsp;</div>
                                                            </div>
                                                        </div>
                                                        <!-- The table listing the files available for upload/download -->
                                                        <div id="upload-table-content">
                                                            <table role="presentation" class="table table-striped"><tbody class="files">
                                                                    <tr class="template-upload">
                                                                        <td></td>
                                                                        <td>Nombre de archivo</td>
                                                                        <td>Tamaño</td>
                                                                        <td>Grupo</td>
                                                                        <td>Disco</td>
                                                                        <td>Nº</td>
                                                                        <td>Titulo</td>
                                                                        <td>Progreso</td>
                                                                        <td>Acciones</td>
                                                                    </tr>
                                                            </tbody></table>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="tab-pane" id="youtube">YT</div>
                                                <div class="tab-pane" id="tutv">tu.tv</div>
                                            </div>

                                        </div>

                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div>   
                        </body>

                        </html>